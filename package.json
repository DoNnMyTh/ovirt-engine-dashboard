{
  "name": "ovirt-engine-dashboard",
  "version": "1.0.0",
  "description": "oVirt UI plugin that gives overview of the virtualized environment and its specific objects.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://gerrit.ovirt.org/ovirt-engine-dashboard"
  },
  "scripts": {
    "build": "npm run test && NODE_ENV=production webpack -p --bail",
    "dev": "webpack -d --progress --watch",
    "intl:extract": "EXTRACT_MESSAGES=1 webpack -d && rip json2pot 'extra/messages/**/*.json' -o 'extra/messages/dashboard-messages.pot'",
    "intl:apply": "rip po2json 'extra/messages/po/dashboard-messages.*.po' -m 'extra/messages/src/*.json' -o 'intl/translations.json'",
    "test": "eslint src --ext js,jsx"
  },
  "devDependencies": {
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-intl": "^2.1.3",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "bootstrap": "^3.3.6",
    "c3": "^0.4.10",
    "classnames": "^2.2.3",
    "clean-webpack-plugin": "^0.1.8",
    "copy-webpack-plugin": "^2.1.1",
    "css-loader": "^0.23.1",
    "d3": "^3.5.16",
    "eslint": "^2.8.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-config-standard-jsx": "^1.1.1",
    "eslint-config-standard-react": "^2.3.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-react": "^5.0.1",
    "eslint-plugin-standard": "^1.3.2",
    "file-loader": "^0.8.5",
    "intl-messageformat": "^1.3.0",
    "jquery": "^2.2.3",
    "json-loader": "^0.5.4",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-intl": "^2.1.2",
    "react-intl-po": "^1.0.5",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  }
}
